{
  "output": "./../",
	"ignore": ["**/exclude"],
  "locals": {
    "url": "http://localhost:8080",
    "name": "Andrea Jemmett",
    "owner": "acidghost",
    "description": "Talking about passions..."
  },
  "plugins": [
    "./plugins/paginator.coffee"
  ],
  "require": {
    "moment": "moment",
    "_": "underscore",
    "typogr": "typogr"
  },
  "jade": {
    "pretty": true
  },
  "markdown": {
    "smartLists": true,
    "smartypants": true
  },
  "paginator": {
		"articles": "blog",
		"template": "blog.jade",
		"first": "blog/index.html",
		"filename": "blog/page/%d/index.html",
    "perPage": 3
  }
}
